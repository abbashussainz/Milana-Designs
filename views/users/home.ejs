    <script>
        function addtocart(pro) {
            $.ajax({
                url: '/addtocart',
                data: {
                    proID: pro,
                },
                method: 'post',
                success: (response) => {
                    if (response.auth == false) {
                        location.href = "/login"
                    }
                    else if (response) {
                        location.reload()
                    }
                }
            })
        }
    </script>



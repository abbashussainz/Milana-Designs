<link rel="stylesheet" href="/stylesheets/orderDetails.css">
<div class="container">
    <div>
        <div id="address">
            <h4>Delivery address: </h4>
            <p>Name: <%=address.name%>
            </p>
            <p>Mobile:<%=address.phone%>
            </p>
            <p>Pincode:<%=address.pincode%>
            </p>
            <p>Address:<%=address.address%>
            </p>
            <p>City:<%=address.city%>
            </p>
        </div>
    </div>

    <div class="table-responsive-lg">
        <table class="table table-hover mt-5 rounded">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Image</th>
                    <th scope="col">product</th>
                    <th scope="col">price</th>
                    <th scope="col">Qty</th>
                    <th scope="col">Total Price</th>

            </thead>
            <tbody>

                <% products.forEach(function(value) { %>
                    <tr>
                        <td>
                            <img src="<%=value.productId.image1.url%>" alt="" width="100px">
                        </td>
                        <td>
                            <%=value.productId.name%>
                        </td>
                        <td>
                            Rs.<%=value.productId.totalPrice%>
                        </td>
                        <td>
                            <%=value.qty%>
                        </td>
                        <td>
                            Rs.<%= value.qty * value.productId.totalPrice %>
                        </td>
                    </tr>
                    <% }) %>

            </tbody>
        </table>
    </div>
</div>
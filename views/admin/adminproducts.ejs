<div class="container">
    <div>
        <form action="/admin/addproduct"><button
                style="border: none; padding:15px; margin-top: 50px; background-color:rgb(69, 47, 21);color: aliceblue; font-weight: 8000; border-radius: 5px;">Add
                Product</button></form>
    </div>

    <div class="row">
        <link rel="stylesheet" href="/stylesheets/product.css">
        <link rel="stylesheet"
            href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
        <% products.forEach(function(value) { %>
            <div
                class="col-lg-3 col-sm-6 d-flex flex-column align-items-center justify-content-center product-item my-3 py-3">
                <section id="product1" class="section-p1">
                    <div class="pro">
                        <img src="<%=value.image1.url%>" alt="">
                        <dev class="des">
                            <a style="cursor: pointer; text-decoration: none;" href="/admin/productview/<%=value.id%>">
                                <span id="brand">
                                    <%=value.collections%>
                                </span>
                                <h5>
                                    <%=value.name%>
                                </h5>
                                <% if (value.offerPercentage !=0 ) { %>
                                    <h4>Rs.<%=value.totalPrice%>/ <span
                                                style="color: grey; padding-left: 10px;font-size: medium;">
                                                <s>
                                                    <%=value.price%>
                                                </s>
                                                <span
                                                    style="color:  rgb(31, 143, 33); padding-left: 10px; font-size: small; font-weight: 700;">
                                                    (<%=value.offerPercentage%>% off)
                                                </span>
                                            </span></h4>
                                    <%}%>
                                        <% if (value.offerPercentage==0 ) { %>
                                            <h4>Rs.<%=value.totalPrice%>/</h4>
                                            <%}%>
                            </a>
                        </dev>
                    </div>
                </section>
            </div>
            <% }) %>
    </div>
</div>
<div class="container p-5">

    <div class="d-flex flex-column justify-content-center mx-auto " style="width:70%;">
        <form method="post" enctype="multipart/form-data">
            <label for="form-control" style="font-weight: bolder;">Category Name</label>
            <input class="form-control m-2" type="text" name="name" id="" placeholder="Category name">
            <button class="btn btn-dark">submit</button>
        </form>
        <table class="table table-hover mt-5 rounded">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Category name</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% category.forEach(function(value) { %>
                    <tr>
                        <td>
                            <%=value.name %>
                        </td>
                        <td>
                            <form action="/admin/removecategory/<%=value.id %>"><button
                                    class="btn btn-danger">Delete</button></form>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>

    </div>

</div>
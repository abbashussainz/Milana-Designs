<div class="container p-5">

    <div class="d-flex flex-column justify-content-center mx-auto " style="width:70%;">
        <h2 style="font-weight:medium;">Add Offer:</h2>
        <form method="post" enctype="multipart/form-data">
            <label class="m-3" for="sellist1" style="font-weight:light;">Select Products:</label>
            <select class="form-select m-3" name="proId">
                <% products.forEach(function(value) { %>
                    <option value="<%=value._id %>">
                        <%=value.name%>
                    </option>
                    <% }) %>
            </select>
            <label class=" m-3" for="form-control" style="font-weight:light;">Product offer:</label>
            <input class="form-control m-3" type="text" name="offer" id="" placeholder="1% to 100%">
            <button class="btn btn-dark m-3">submit</button>
        </form>
    </div>

    <div class="container">
        <div class="table-responsive-lg">
            <table class="table table-hover mt-5 rounded">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Image</th>
                        <th scope="col">product</th>
                        <th scope="col">price</th>
                        <th scope="col">Offer%</th>
                        <th scope="col">OfferPrice</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>

                    <% offer.forEach(function(value) { %>
                        <tr>
                            <td>
                                <img src="<%=value.image1.url%>" alt="" width="100px">
                            </td>
                            <td>
                                <%=value.name %>
                            </td>
                            <td style="color:gray;">
                                <S> ₹ <%=value.price%></S>
                            </td>
                            <td style="font-weight: 800; color: green;">
                                <%=value.offerPercentage%>%
                            </td>
                            <td>
                                ₹ <%=value.totalPrice%>
                            </td>
                            <td>
                                <form action="/admin/removeoffer/<%=value.id %>"><button
                                        class="btn btn-danger">Remove</button></form>
                            </td>
                        </tr>
                        <% }) %>

                </tbody>
            </table>
        </div>
    </div>
</div>